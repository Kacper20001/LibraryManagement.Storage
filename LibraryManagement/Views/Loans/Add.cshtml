@model LibraryManagement.Service.Command.Loan.LoanBookCommand

<h2>Dodaj Wypożyczenie</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="ClientId" class="control-label">Klient</label>
        <select asp-for="ClientId" class="form-control">
            <option value="">-- Wybierz Klienta --</option>
            @foreach (var client in Model.Clients)
            {
                <option value="@client.Id">@client.Name @client.Surname</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="BookId" class="control-label">Książka</label>
        <select asp-for="BookId" class="form-control">
            <option value="">-- Wybierz Książkę --</option>
            @foreach (var book in Model.Books)
            {
                <option value="@book.Id">@book.Title</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj Wypożyczenie</button>\
    <button type="button" class="btn btn-secondary" onclick="window.history.back()">Powrót</button>

</form>
